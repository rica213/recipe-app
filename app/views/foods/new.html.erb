 <div class="add-food-form">
    <h2>Add New Food</h2><br>

    <%= form_with model: @food, method: :post, local: true do |f| %>

    <% if @food.errors.any? %>
            <div>
                <% @food.errors.full_messages.each do |message| %>
                    <div><%= message.inspect %></div>
                <% end %>
            </div>
        <% end %>
    <div class="food-form">
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>

        <%= f.label :measurement_unit %>
        <%= f.text_field :measurement_unit, required: true%>

        <%= f.label :price %>
        <%= f.text_field :price, required: true %>

        <%= f.label :quantity %>
        <%= f.text_field :quantity, required: true %>


        <%= f.submit 'Create Food' %>
    </div>
    <% end %>
</div>